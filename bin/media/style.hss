var myOrange = #DC5B21;
var myWhite = #DCD8CF;
var myBlue = #E3AE57;
var myBrown = #282827;
var noMargin = {margin: 0; padding: 0;}
var rounded = {border-radius: CSS('10px 10px 0px 0px'); -moz-border-radius: CSS('10px 10px 0px 0px'); -webkit-border-radius: CSS('10px 10px 0px 0px'); -khtml-border-radius: CSS('10px 10px 0px 0px');}
var shadow = {-webkit-box-shadow: CSS('#999 0 0 .25em'); -moz-box-shadow: CSS('#999 0 0 .25em'); box-shadow: CSS('#999 0 0 .25em');}
var titleFont = { font: CSS("48px 'Open Sans Condensed', sans-serif");}
var postTitleFont = { font: CSS("32px 'Open Sans Condensed', sans-serif");}
body{
	color: $myWhite;
	background-color: $myBrown;
}

h1{
    $titleFont;
    text-transform: uppercase;
    margin-bottom: 24px;
	line-height: 0.8em;
}

h2{
    $postTitleFont;
}

h1 a, h2 a{
    color:$myOrange !important;
    text-decoration: none !important;
}

a{
	color:$myBlue;
}

a:visited{
	color:$myBlue;
}

#content{
    position: absolute;
    font: CSS("16px/1.5 'PT Serif', Times, Cambria, serif");
    width: 580px;
    left: 50%;
    margin-left: -100px;
}

#content p,
#content ul{
    margin-bottom:25px;
}

#content ul{
    padding-left:20px;
}

#content li{
    margin-bottom:5px;
}

/* The actual post styles */

.post{
    padding: 50px 0 15px 0;
    border-bottom: 1px solid #dfdfdf;
	.date{
		font: CSS("bold 12px 'Open Sans Condensed', sans-serif");
		text-transform: uppercase;
		color: #a7a7a7;
		margin: 24px 0 30px 20px;
		position: relative;
		.before{
			width: 18px;
			height: 18px;
			position: absolute;
			content: CSS("''");
			left: -22px;
			top: -1px;
			background: url("data:image/png;base64,");
		}
	}
}

aside{
    position: fixed;
    width: 250px;
    height: auto;
    top: 0;
    left: 50%;
    bottom: 0;
    margin-left: -460px;
    padding-top: 65px;
	p.description{
		font-size: 13px;
		line-height: 1.8em;
		margin-bottom: 40px;
	}
	ul{
		font: CSS("bold 18px 'Open Sans Condensed', sans-serif");
		text-transform: uppercase;
		list-style: none;
		li a{
			text-decoration: none !important;
			display: CSS("inline-block");
			padding: 0 3px;
			margin: 2px 0 2px 10px;
			color: $myBlue;
		}
		li a:hover{
			background-color: $myOrange;
			color: $myWhite;
		}
	}
	p.author{
		position: absolute;
		bottom: 20px;
		height: 30px;
		font-size: 12px;
	}
}

.pagination-arrow{
    display: CSS("inline-block");
    font: CSS("bold 116px 'Open Sans Condensed', sans-serif");
    border: 1px solid #ccc;
    border-radius: CSS('3px');
    margin: 20px 15px;
    color: #555 !important;
    padding: 8px 12px;
    text-decoration: none !important;
    text-transform: uppercase;
    position: relative;
}

.pagination-arrow.newer{
    padding-left: 20px;
}

.pagination-arrow.older{
    padding-right: 20px;
    float: right;
}

.pagination-arrow.newer .before,
.pagination-arrow.older .before{
    content: CSS("''");
    border: 5px solid #555;
    border-color: CSS('transparent #555 transparent transparent');
    width: 0;
    height: 0;
    position: absolute;
    left: 3px;
    top: 12px;
}

.pagination-arrow.older .before{
    left: 0px;
    right: 3px;
    border-color: CSS('transparent transparent transparent #555');
}

.message{
    padding-top: 50px;
	h1{
		font-size: 36px;
		margin-bottom: 18px;
	}
	p{
		font-size: 13px;
	}
}

.center{
    text-align: center;
}

